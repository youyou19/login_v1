<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="0,1"
    tools:context=".shopActivity">
    <TableRow>


        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_span="2"
            android:layout_gravity="right"
            />

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping by Categories"
            android:layout_span="2"
            android:layout_gravity="center"
            />
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="electronicClick"
            app:srcCompat="@drawable/electronic" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:onClick="clothClick"
            app:srcCompat="@drawable/clothing" />
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <TextView
            android:id="@+id/electronic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronics"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/clothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clothing"
            android:layout_gravity="center"/>

    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TableRow>
        <ImageView
            android:id="@+id/beatyImage"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="beautyClick"
            app:srcCompat="@drawable/beauty"
            />
        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:onClick="foodClick"
            app:srcCompat="@drawable/food" />
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <TextView
            android:id="@+id/beauty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beauty"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Food" />


    </TableRow>
</TableLayout>